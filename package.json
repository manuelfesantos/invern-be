  "license": "ISC",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240419.0",
    "@eslint/js": "^9.2.0",
    "@types/jest": "^29.5.12",
    "eslint": "^8.57.0",
    "globals": "^15.1.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.8.0"
  },
  "dependencies": {
    "@upstash/kafka": "^1.3.5",
    "zod": "^3.23.4"
  }
}
