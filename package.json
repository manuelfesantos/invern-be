{
  "name": "invern-be",
  "version": "1.0.0",
  "description": "Invern Spirit Backend",
  "main": "index.js",
  "scripts": {
    "build-local-db": "npx wrangler d1 execute INVERN_DB --file=db/db.sql",
    "list-local-tables": "npx wrangler d1 tables list INVERN_DB",
    "build-remote-db": "npx wrangler d1 execute invern-db --remote --file=db/db.sql",
    "query": "npx wrangler d1 execute invern-db --remote",
    "query-local": "npx wrangler d1 execute INVERN_DB",
    "insert-local": "npx wrangler d1 execute INVERN_DB --file=db/inserts/insert.sql",
    "local": "npm run build-local-db && npx wrangler pages dev functions --d1 INVERN_DB=e5193edd-54a6-4b15-8e67-d0bd12b9afd2 --local-protocol=https --compatibility-date=2024-04-26",
    "remote": "npm run build-remote-db && npx wrangler pages dev --remote"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240419.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@upstash/kafka": "^1.3.5",
    "zod": "^3.23.4"
  }
}
