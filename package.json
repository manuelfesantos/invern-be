{
  "name": "invern-be",
  "version": "1.0.0",
  "description": "Invern Spirit Backend",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "lint": "npx eslint functions/** libs/**",
    "build-local-db": "npx wrangler d1 execute INVERN_DB --file=db/db.sql",
    "build-remote-db": "npx wrangler d1 execute invern-db --remote --file=db/db.sql",
    "query-local": "npx wrangler d1 execute INVERN_DB",
    "insert-local": "npx wrangler d1 execute INVERN_DB --file=db/add-data.sql",
    "insert-remote": "npx wrangler d1 execute invern-db --remote --file=db/add-data.sql",
    "query": "npx wrangler d1 execute invern-db --remote",
    "local": "rm -rf .wrangler && npm run build-local-db && npm run insert-local && npx wrangler pages dev functions --d1 INVERN_DB=e5193edd-54a6-4b15-8e67-d0bd12b9afd2 --local-protocol=https --compatibility-date=2024-04-26",
    "prepare": "husky"
  },
  "keywords": [],
