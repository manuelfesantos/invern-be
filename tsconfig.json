{
  "include": ["*/**/*.ts"],
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "NodeNext",
    "lib": ["esnext"],
    "strict": true,
    "skipLibCheck": true,
    "types": ["@cloudflare/workers-types", "jest"],
    "resolveJsonModule": true,
    "paths": {
      "@auth-utils": ["libs/utils/auth"],
      "@mocks-utils": ["libs/utils/__mocks__"],
      "@cart-adapter": ["libs/adapters/cart"],
      "@cart-entity": ["libs/entities/cart"],
      "@cart-module": ["libs/modules/cart"],
      "@collection-adapter": ["libs/adapters/collection"],
      "@collection-entity": ["libs/entities/collection"],
      "@collection-module": ["libs/modules/collection"],
      "@crypto-utils": ["libs/utils/crypto"],
      "@db-utils": ["libs/utils/db"],
      "@encoding-utils": ["libs/utils/encoding"],
      "@error-handling-utils": ["libs/utils/error-handling"],
      "@global-entity": ["libs/entities/global"],
      "@http-entity": ["libs/entities/http"],
      "@image-adapter": ["libs/adapters/image"],
      "@image-entity": ["libs/entities/image"],
      "@product-adapter": ["libs/adapters/product"],
      "@product-entity": ["libs/entities/product"],
      "@product-module": ["libs/modules/product"],
      "@response-entity": ["libs/entities/response"],
      "@secret-key-adapter": ["libs/adapters/secret-key"],
      "@timer-utils": ["libs/utils/timer"],
      "@user-adapter": ["libs/adapters/user"],
      "@user-entity": ["libs/entities/user"],
      "@user-module": ["libs/modules/user"]
    }
  }
}