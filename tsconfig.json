{
  "include": ["*/**/*.ts"],
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "NodeNext",
    "lib": ["esnext"],
    "strict": true,
    "skipLibCheck": true,
    "types": ["@cloudflare/workers-types"],
    "paths": {
      "@apps/*": ["apps/*"],
      "@adapters/*": ["libs/adapters/*"],
      "@modules/*": ["libs/modules/*"],
      "@utils/*": ["libs/utils/*"],
      "@entities/*": ["libs/entities/*"]
    }
  }
}